{
  "name": "quill-blog-api-worker",
  "version": "1.0.0",
  "description": "Cloudflare Worker for Quill Auto Blogger API",
  "main": "worker.js",
  "scripts": {
    "dev": "wrangler dev",
    "dev:upload": "wrangler dev & ./upload-index.sh",
    "deploy": "wrangler deploy && ./upload-index.sh",
    "deploy:staging": "wrangler deploy --env staging && ./upload-index.sh",
    "deploy:production": "wrangler deploy --env production && ./upload-index.sh",
    "upload": "./upload-index.sh",
    "test": "node test-worker.js",
    "test:local": "wrangler dev & sleep 5 && node test-worker.js && pkill -f 'wrangler dev'",
    "format": "prettier --write *.js *.toml *.md",
    "lint": "eslint *.js"
  },
  "keywords": [
    "cloudflare",
    "worker",
    "api",
    "blog",
    "r2",
    "edge-computing"
  ],
  "author": "Paul Chris Luke",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240901.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
